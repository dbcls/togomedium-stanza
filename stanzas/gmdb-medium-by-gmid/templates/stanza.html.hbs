<div class="wrapper">

  {{#if error}}
    <p>{{msg}}</p>
  {{/if}}

  {{#unless error}}
    <p class="gm-id">
      <span class="key">Growth Medium ID: </span>
      <span class="value">{{id}}</span>
      <span class="links">
        <a class="link-btn" target="_blank" href="{{src_url}}">{{src_label}}</a>
      </span>
    </p>
    <p class="name">
      <span class="value">{{name}}</span>
    </p>
    <h3>Components</h3>
    <table class="component-table">
      <tr>
        <th class="id">GMO ID</th>
        <th class="name">Name</th>
        <th class="properties">Properties</th>
        <th class="functions">Functions</th>
      </tr>
      {{#each components}}
        <tr>
          <td class="id">
            <a href="/component/{{gmo_id}}">{{gmo_id}}</a>
          </td>
          <td class="name">
            <span class="{{#if can_wrap}}can-wrap{{/if}}">{{label_en}}</span>
          </td>
          <td class="properties">
            {{#if properties}}
              {{#each properties}}
                <span>{{short_label}}</span>
              {{/each}}
            {{/if}}
          </td>
          <td class="functions">
            {{#if roles}}
              {{#each roles}}
                <span>{{label_en}}{{#unless @last}}, {{/unless}}</span>
              {{/each}}
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </table>

  {{/unless}}
</div>
