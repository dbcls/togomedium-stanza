<div class="wrapper">

  {{#if error}}
    <p class="error">{{{statusText}}}</p>
  {{/if}}

  {{#unless error}}
    <p class="gm-id">
      <span class="key">Growth Medium ID: </span>
      <span class="value">{{id}}</span>
      <span class="links">
        <a class="link-btn" target="_blank" href="{{src_url}}">{{src_label}}</a>
      </span>
    </p>
    <p class="title">
      <span class="value">{{name}}</span>
      <span class="ph"> (pH{{ph}})</span>
    </p>
    <div class="recipe">
      <h3>Components</h3>
      {{#each components}}
        {{#if items }}
          {{#if subcomponent_name}}
            <h4>{{subcomponent_name}}</h4>
          {{/if}}
          <table class="component-table">
            <tr>
              <th class="component">Component</th>
              <th class="volume">Volume</th>
              <th class="id">GMO ID</th>
              <th class="name">Name</th>
              <th class="properties">Properties</th>
              <th class="functions">Functions</th>
            </tr>
            {{#each items}}
              <tr>
                <td class="name">
                  <span class="{{#if can_wrap_name}}can-wrap{{/if}}">{{component_name}}</span>
                </td>
                <td class="volume">
                  <span>{{volume}}</span><span>{{unit}}</span>
                </td>
                <td class="id">
                  <a href="/component/{{gmo_id}}">{{gmo_id}}</a>
                </td>
                <td class="name">
                  <span class="{{#if can_wrap_label}}can-wrap{{/if}}">{{label}}</span>
                </td>
                <td class="properties">
                  {{#if properties}}
                    {{#each properties}}
                      <span>{{displayLabel}}</span>
                    {{/each}}
                  {{/if}}
                </td>
                <td class="functions">
                  {{#if roles}}
                    {{#each roles}}
                      <span>{{label}}{{#unless @last}}, {{/unless}}</span>
                    {{/each}}
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          </table>
        {{/if}}
        {{#if comment}}
          <p>{{{comment}}}</p>
        {{/if}}
      {{/each}}
    </div>
  {{/unless}}
</div>
